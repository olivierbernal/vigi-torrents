<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/dialog_rounded_bg_mainblue"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/expertTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/export_form"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_200"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/waterHeightLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/waterHeightTxt"
                    style="@style/txtForm"
                    android:layout_height="@dimen/formTxtExport"
                    android:text="@string/hauteur_d_eau" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/chevronForm"
                    android:text=">" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/speedLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/speedTxt"
                    style="@style/txtForm"
                    android:text="@string/vitesse"
                    android:layout_height="@dimen/formTxtExport"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/chevronForm"
                    android:text=">" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/floatingElementLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/floatingElementTxt"
                    style="@style/txtForm"
                    android:layout_height="@dimen/formTxtExport"
                    android:text="@string/transport_d_l_ments_flottants"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:text=">"
                    style="@style/chevronForm"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/clarityLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/waterOpacityTxt"
                    android:text="@string/clart_de_l_eau"
                    style="@style/txtForm"
                    android:layout_height="@dimen/formTxtExport"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:text=">"
                    style="@style/chevronForm" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/okBtn"
                style="@style/OkBtn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Je_valide" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exitBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        style="@style/Btn"
        android:text="X"
        android:drawableTint="@color/blackButtonFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>